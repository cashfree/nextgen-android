<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/cf_dimen_32"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/dropCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startDropCheckout"
            android:text="Drop Checkout (Deprecated)" />

        <Button
            android:id="@+id/elementCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startElementCheckout"
            android:text="PG SDK Element Flow" />

        <Button
            android:id="@+id/upiIntentCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startUPIIntentCheckout"
            android:text="UPI Intent Checkout" />

        <Button
            android:id="@+id/webCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startWebCheckout"
            android:text="PG SDK Web Checkout" />

        <Button
            android:id="@+id/subscriptionCheckoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="startSubscriptionCheckout"
            android:text="Subscription Flow" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>